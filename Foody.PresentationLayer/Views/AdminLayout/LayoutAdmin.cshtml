                            <a href="#">Base</a>
                        </li>
                        <li class="separator">
                            <i class="icon-arrow-right"></i>
                        </li>
                        <li class="nav-item">
                            <a href="#">Avatars</a>
                        </li>
                    </ul>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Sizing</h4>

                            </div>
                            <div class="card-body">
                                <p class="demo">
                                    <div class="avatar avatar-xxl">
                                        <img src="~/Admin Teması/kaiadmin-lite-1.2.0/assets/img/jm_denis.jpg" alt="..." class="avatar-img rounded-circle">
                                    </div>

                                    <div class="avatar avatar-xl">
                                        <img src="~/Admin Teması/kaiadmin-lite-1.2.0/assets/img/jm_denis.jpg" alt="..." class="avatar-img rounded-circle">
                                    </div>

                                    <div class="avatar avatar-lg">
                                        <img src="~/Admin Teması/kaiadmin-lite-1.2.0/assets/img/jm_denis.jpg" alt="..." class="avatar-img rounded-circle">
                                    </div>

                                    <div class="avatar">
                                        <img src="~/Admin Teması/kaiadmin-lite-1.2.0/assets/img/jm_denis.jpg" alt="..." class="avatar-img rounded-circle">
                                    </div>

                                    <div class="avatar avatar-sm">
                                        <img src="~/Admin Teması/kaiadmin-lite-1.2.0/assets/img/jm_denis.jpg" alt="..." class="avatar-img rounded-circle">
                                    </div>

                                    <div class="avatar avatar-xs">
                                        <img src="~/Admin Teması/kaiadmin-lite-1.2.0/assets/img/jm_denis.jpg" alt="..." class="avatar-img rounded-circle">
